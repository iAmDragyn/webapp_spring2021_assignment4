<div class="form-data">
    <form action="<%= `/posts/${post._id}/update?_method=PUT`%>" method="POST">        <label for="txtTitle">Title</label>
        <input type="text"name="title" id="txtTitle" autofocus required value="<%= post.title %>"> 

        <label for="txtDescription">Description</label>
        <input type="text"name="description" id="txtDescription" required value="<%= post.description %>">

        <button type="submit">Save</button>
    </form>
</div>